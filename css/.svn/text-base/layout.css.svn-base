@charset "UTF-8";
/* CSS Document */

main#Container {
	width: 960px;
	margin: 0 auto;
	padding: 0 16px 16px 16px;
	position: relative;
	box-sizing: border-box;
	
}

/*Main Content area */

h1#Name {
	text-indent: -9999px;
	/*width: 471px;
	height: 190px;*/
	margin:  -4px auto 0;
	position: relative;
	z-index: 2;
	/*-moz-perspective: 500px;
	-webkit-perspective: 500px;
	perspective: 500px;*/
}

h1#Name img {
	display: block;
	width: 471px;
	border-bottom: none;
	margin: auto;
}

h1#Name a {
	display: block;
	width: 471px;/*needed for the transform to work*/
	border-bottom: none;
	margin: auto;
	-moz-transition: all .2S linear;
	-webkit-transition: all .2S linear;
	transition: all .2S linear;
}

h1#Name a:hover,
h1#Name a:active,
h1#Name a:focus {
	border-bottom: none;
	outline: none;
	-moz-transform-origin: 0% 50%;
	-webkit-transform-origin: 0% 50%;
	transform-origin: 0% 50%;
	-moz-transform: rotate(-2deg) ;
	-webkit-transform: rotateX(-20deg) rotateY(4deg) scaleX(.96);
	transform: rotateX(-20deg) rotateY(4deg) scaleX(.96);
}

img#SubTitle { 
	display: block;
	width: 322px;
	height: 92px;
	text-indent: -9999px;
	position: absolute;
	z-index: 1;
	top: 116px;
	/*left: 400px;*/
	right: 150px;
}

p#BigQuote {
	display: block;
	position: relative;
	width: auto;
	z-index: 0;
	padding: 24px 6px;
	/*border-width: 1px 0;
	border-color: rgba(0,0,0,0.4);
	border-style: solid; */
	color: #836d74;
	color: rgba(131,109,116,0.8);
	font-size: 48px;
	line-height: 120%;
	text-align: center;
	text-shadow: 1px 1px 0px rgba(255,255,255,.5), -1px -1px 0px rgba(9,1,4,.5);
	font-family: 'Shadows Into Light', Helvetica, Arial, sans-serif;
	
}
#MainContent p#BigQuote {
	margin: 0;
}

#MainContent {
	min-height: 730px;
	height: auto;
	width: 100%;
	background-color: transparent;
	background-image: url(../img/bkg/Stoney-Purple.jpg);
	background-repeat: no-repeat;
	background-position: top center;
	background-attachment:fixed;
	position: relative;
	margin: 0;
	padding: 0;
	float: left;
}

* html #MainContent {
 overflow-y:auto;
}

#MainContent h2 {
	font-size: 30px;
	font-weight: normal;
	margin: .5em 0;
	font-family: 'Shadows Into Light', Helvetica, Arial, sans-serif;
}


#MainContent p {
	margin: 1em;
}


ul#Works {
	clear: both;
	margin: -40px auto 12px;
	z-index: 2;
}

ul#Works p {
	margin: 0px;
	padding: 0px;
	margin-bottom: 8px;
}

ul#Works p.Company,
ul#Works p.Tools{
	font-style: italic;
	color: #a57484;
	margin:0 0 2px;
}

ul#Works p.Tools {
	margin:0 0 8px;
}




ul#Works > li {
	overflow: hidden;
	padding: 40px 0;
	-moz-box-shadow: 0px 1px 0px rgba(255, 255, 255, .2);
	-webkit-box-shadow: 0px 1px 0px rgba(255, 255, 255, .2);
	box-shadow: 0px 1px 0px rgba(255, 255, 255, .2);
	border: 1px solid transparent;
	border-bottom: 1px solid #010000;
	-moz-transition: all .2s linear;
	-webkit-transition: all .2s linear;
	transition: all .2s linear;
	-moz-box-shadow: inset 0 0 32px rgba(255,255,255,0), 4px 4px 6px rgba(0,0,0,0), 0px 1px 0px rgba(255, 255, 255, .2);
	-webkit-box-shadow: inset 0 0 32px rgba(255,255,255,0), 4px 4px 6px rgba(0,0,0,0),0px 1px 0px rgba(255, 255, 255, .2);
	box-shadow: inset 0 0 32px rgba(255,255,255,0), 4px 4px 6px rgba(0,0,0,0),0px 1px 0px rgba(255, 255, 255, .2);
}



ul#Works > li dl {
	margin-top: 20px;
}


ul#Works li img {
	box-shadow: 10px 10px 20px rgba(0,0,0,0.7), -10px -10px 20px rgba(0,0,0,0.6);
}

ul#Works li dl dt { margin-top: 12px;}

ul#Works li dl dd {
	margin: 6px 0px 0px 0px;
}

ul#Works li dl dd img {
	float: none;
	background: transparent;
	padding: 0px;
	margin: 0px;
	margin-right: 0px;
	border: 1px solid #836d74;
}


