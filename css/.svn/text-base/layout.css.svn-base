ul#ReNav li {
	margin-left: 4px;
	list-style-type: none;
	font-size: 4px;	
	display: list-item;
	padding: 2px;
	float: none;
	display: list-item;
}

ul#ReNav li a {
	font-size: 12px;	
}

ul#ReNav li:hover {padding-left: 10px;}


dl#Stylistic {
	float: left;
	margin: 24px 0em 24px 12px;
	width: 150px;
}

dl#Stylistic dt {
	margin-right: 1em; 
	margin-bottom: 1em;
	color: #a57484;
	display: block;
}


dd#naked {
	padding: .25em 0;
}

dd#naked img {
	display: inline;
	opacity: .6;
	margin-right: 4px;
	border: none;
}

dd#naked:hover img {opacity:1;}

#tidy {
	padding: .25em 2em .25em .25em;
	background: transparent url('../img/tidy.png') no-repeat right;

}




dl#Stylistic dd#ohCrap { display: none; }

li#About {
	float: left;
	margin-left: 30px;
	padding-top: 12px;
}

li#About h4{ font-size: 24px;}


li#About img {
	margin-left: 60px;
	-moz-transform: rotate(5deg);
	-webkit-transform: rotate(5deg);
	transform: rotate(5deg);
	-moz-transition: all .4S linear;
	-webkit-transition: all .4S linear;
	transition: all .4S linear;
}

li#About:hover img,
li#About:active img,
li#About:focus img {
	margin:0;
	transform: rotate(0deg);
}












