/*Graff Faucets */

ul#Works  li#GraffWeb dl.additional dd { width: 60px; float: left; margin: 6px 8px 0px 0px;}

/* Funjet */
ul#Works  li#Funjet dl dd { width: 60px; float: left; margin: 6px 8px 0px 0px;}

/* SouthWest */
ul#Works  li#SouthWest dl dd { width: 100px; float: left; margin: 6px 20px 0px 0px;}





/**** Top Area *******/
/*footer*/



#AdditionalContent { 
	position: relative;
	z-index: 2;
	font-size: 10pt;
	clear:both;
	margin: 0px;
	padding: 12px 0 0 0;;
	padding-top: 1em;
	background: url(../img/bkg/bookcover.jpg) repeat-x center top;
	background: url(../img/bkg/stitch.png) repeat-x left top, url(../img/bkg/bookcover.jpg) repeat-x center top;
	-moz-box-shadow: -6px -4px 6px rgba(0,0,0,.4);
	-webkit-box-shadow: -6px -4px 6px rgba(0,0,0,.4); /* for safari*/
	-webkit-box-shadow: inset 0 0 32px rgba(255,255,255,.3), -6px -4px 6px rgba(0,0,0,.4);
	box-shadow: inset 0 0 32px rgba(255,255,255,.3), -6px -4px 6px rgba(0,0,0,.4);
	overflow:hidden;
	width: auto;
	
}


#AdditionalContent dt, #AdditionalContent dd {
	display: inline;
}


ul#MoreInfo {
	margin: 24px 0 24px; 
	padding: 0;
	padding-top: 30px;
	margin: auto;
	width: 960px;
	box-sizing: border-box;
}


ul#MoreInfo > li {
	display: block; 
	float: left;
	width: 31%;
	box-sizing: border-box;
	padding: 12px;
}

li#contactInfo {
	padding: 12px;
}


li#contactInfo li {
	line-height: 16px;
	padding: 2px 4px;
	display: block;
	float: none;
}

#Copyright {
	clear: both;
	margin: auto;
	text-align: center;
	font-size: 12px;
	font-style: italic;
	opacity: .9;
}

li#FindMe {
	border-left: 1px solid #010000;
    border-right: 1px solid #010000;
	box-shadow: 1px 0px 0px rgba(255, 255, 255, .2), inset 1px 0px 0px rgba(255, 255, 255, .2);
}



ul#ReNav {
	min-height:100px;
	display: block;
    width: 65px;
	margin: 20px auto;
}



